
  <div class="user">
  <%= link_to user.name, user_path(user) %>
    <span>
	    <% if user != current_user %>
		  <% if current_user.friends.include?(user) %>

		  <% elsif current_user.request_sent?(user.id) %>
		    friend request sent!
		  <% else %>
		    <%= render partial: 'friend_requests/friend_request_form',
		    	locals: { to_user_id: user.id } %>
		  <% end %>
	    <% end %>
	</span>
  </div>


