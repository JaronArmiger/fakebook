
  <div class="user">
  <%= link_to user.name, user_path(user) %>
    <% if user != current_user %>
	  <% if current_user.friends.include?(user) %>
	  	
	  <% elsif current_user.friend_requests.include?(user) %>
	    friend request sent!
	  <% else %>
	    <%= link_to "friend +1", '#' %>
	  <% end %>
    <% end %>
  </div>


