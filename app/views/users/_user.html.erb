
  <div class="user">
  <%= link_to user.name, user_path(user) %>
    <span>
	    <% if user != current_user %>
		  <% if current_user.friends.include?(user) %>

		  <% elsif current_user.request_sent?(user.id) %>
		    demande d'ami envoyee
		  <% else %>
		    <%= render partial: 'friend_requests/friend_request_form',
		    	locals: { to_user_id: user.id } %>
		  <% end %>
		<% else %>
		  (c'est moi)
	    <% end %>
	</span>
  </div>
